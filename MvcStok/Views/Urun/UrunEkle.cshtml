@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label>Marka Adı</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Marka Adı Giriniz" required maxlength="30"/>
    </div>
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" placeholder="Ürün Adı Giriniz"  required=""/>
    </div>
    <div class="form-group">
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ürün Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" placeholder="Ürün Fiyat Giriniz" />
    </div>
    <div class="form-group">
        <label>Stok</label>
        <input type="text" class="form-control" name="STOK" placeholder="Ürün Stok Giriniz" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Ürün Ekle</button>
    </div>
</form>

