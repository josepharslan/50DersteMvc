@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <td>MÜŞTERİ ID</td>
            <td>MÜŞTERİ ADI</td>
            <td>MÜŞTERİ SOYADI</td>
            <td>İŞLEMLER</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MUSTERIID</td>
                <th>@mus.MUSTERIAD</th>
                <th>@mus.MUSTERISOYAD</th>
                <td style="width: 1%; white-space: nowrap;">
                    <a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger"><i class="bi bi-trash-fill"></i> SİL</a>
                    <a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> GÜNCELLE</a>
                </td>
                <td>@Html.ActionLink("Sil Butonu", "SIL", new { id = mus.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstediğine Emin misiniz?')" })  </td>
            </tr>
        }
    </tbody>
</table>
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> YENİ MÜŞTERİ EKLE</a>
