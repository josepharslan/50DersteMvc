@model MvcStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" id="musteri">
    <div class="form-group">
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:red" })
    </div>
    <div class="form-group">
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" placeholder="Müşteri Soyadı Giriniz" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $(document).ready(function () {
            $("#musteri").submit(function (e) {
                if (!$(this).valid()) {
                    return false;
                }

                alert('Müşteri eklendi.');
            });
        });
    </script>
</form>
